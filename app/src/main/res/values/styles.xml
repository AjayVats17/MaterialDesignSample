<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="Theme.DesignDemo" parent="Base.Theme.DesignDemo">

    </style>

    <style name="Base.Theme.DesignDemo" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">#19aeb2</item>
        <item name="colorPrimaryDark">#2fc4d0</item>
        <item name="colorAccent">#19aeb2</item>
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/button_pressed</item>
        <item name="colorPrimaryDark">@color/button_not_pressed</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.RedFabGreenRipple">
        <item name="colorAccent">@color/button_pressed</item>
        <item name="colorControlHighlight">#19aeb2</item>
    </style>

    <style name="AppTheme.GreenRipple">
        <item name="colorControlHighlight">#008000</item>
    </style>

    <style name="Widget.CardContent" parent="android:Widget">
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">24dp</item>
        <item name="android:paddingBottom">24dp</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="BaseAppTheme" parent="Theme.AppCompat.DayNight.NoActionBar" tools:targetApi="lollipop">
        <!-- enable window content transitions -->
        <item name="colorPrimary">#C0C0C0</item>
        <item name="colorPrimaryDark">#CC0c1e37</item>
        <item name="colorAccent">#303F9F</item>
        <item name="android:windowActivityTransitions">true</item>
        <item name="android:windowContentTransitions">true</item>

    </style>

    <style name="AppTheme.Home">
        <!-- enable window content transitions -->
        <item name="android:windowExitTransition" tools:targetApi="lollipop">@transition/grid_exit
        </item>
        <item name="android:windowReenterTransition" tools:targetApi="lollipop">
            @android:transition/slide_top
        </item>

    </style>

</resources>
